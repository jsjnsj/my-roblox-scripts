local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- ç­‰å¾…è§’è‰²åŠ è½½
task.wait(0.5)

-- æš´åŠ›æœç´¢å¹¶éšè—å·¦è…¿
local function applyNoLeg(char)
    local legFound = false
    
    -- æ–¹æ³•1ï¼šæŸ¥æ‰¾æ ‡å‡†å‘½å
    for _, legName in ipairs({"Left Leg", "LeftLeg", "LeftUpperLeg", "LeftLowerLeg", "LeftFoot"}) do
        local leg = char:FindFirstChild(legName)
        if leg then
            leg.Transparency = 1
            legFound = true
            print("âœ… å·²éšè—: " .. legName)
        end
    end
    
    -- æ–¹æ³•2ï¼šæš´åŠ›æœç´¢æ‰€æœ‰å«"Left"çš„éƒ¨ä»¶
    if not legFound then
        for _, part in ipairs(char:GetDescendants()) do
            if part:IsA("BasePart") and part.Name:lower():find("left") and not part.Name:lower():find("arm") then
                part.Transparency = 1
                legFound = true
                print("âœ… å·²éšè—ï¼ˆæš´åŠ›æœç´¢ï¼‰: " .. part.Name)
            end
        end
    end
    
    if not legFound then
        print("âš ï¸ æœªæ‰¾åˆ°å·¦è…¿ï¼Œå¯èƒ½æ¸¸æˆä½¿ç”¨äº†ç‰¹æ®Šå‘½å")
    end
end

applyNoLeg(character)

-- è‡ªåŠ¨é‡ç”Ÿåº”ç”¨
player.CharacterAdded:Connect(function(newChar)
    task.wait(0.5)
    applyNoLeg(newChar)
    print("ğŸ”„ æ–­è…¿æ•ˆæœå·²é‡æ–°åº”ç”¨")
end)

print("âœ… æ–­è…¿è„šæœ¬å·²æ¿€æ´»ï¼ï¼ˆå·¦è…¿æ¶ˆå¤±ï¼‰")

